{
  "name": "@apenhet/library",
  "version": "0.0.3",
  "description": "Starter template for Typescript library at Ã¥penhet.",
  "main": "dist/lib/index.umd.js",
  "module": "dist/lib/index.es5.js",
  "typings": "dist/types/index.d.ts",
  "author": "Yasser Lahbibi <yasser.lahbibi@apenhet.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apenhet/library.git"
  },
  "scripts": {
    "push": "git add . && git-cz && git push",
    "start": "rollup -c rollup.config.js -w",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint",
    "docs": "jsdoc -c jsdoc.json"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "modulePathIgnorePatterns": [
      "test/utils"
    ],
    "setupFilesAfterEnv": [
      "./test/utils/setup.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/jest-dom": "^5.13.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-polyfill": "^6.26.0",
    "better-docs": "^2.3.2",
    "commitizen": "^4.2.4",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "git-cz": "^4.7.6",
    "jest": "^27.0.4",
    "jsdoc": "^3.6.7",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.51.1",
    "ts-jest": "^27.0.3",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  }
}
